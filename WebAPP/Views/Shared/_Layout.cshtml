<!DOCTYPE html>
<html lang="en" style="height:100vh">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DMOrganizer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebAPP.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Css", required:false)
</head>
<script src="~/lib/knockout/knockout.js" type="text/javascript"></script>
<script src="~/lib/knockout/knockout-mapping.js" type="text/javascript"></script>
<script src="~/lib/knockout/knockout-utils.js" type="text/javascript"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-ui/jquery-ui.js" type="text/javascript"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
<script type="text/javascript">
    var RootVM = {};
    var OnLoadCallback = [];
    ko.options.deferUpdates = true;
    ko.Mapper = {};
</script>

<body class="d-flex flex-column fill">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Organizers" asp-controller="Organizers" asp-action="Index">DMOrganizer</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Navbar -->
                    </ul>
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container-fluid fill">
        <main role="main" class="fill">
                @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted mt-3">
        <div class="container">
            &copy; 2023 - DMOrganizer
        </div>
    </footer>
</body>
<script type="text/javascript">
    ko.applyBindings(RootVM);
    OnLoadCallback.forEach(cb => {
        try { cb(); }
        catch (error) {console.error(error);}
    });
</script>
</html>
