@{
	ViewData["Title"] = "Organizers";
}

@section Scripts {
	<script src="~/lib/knockout/knockout-lazy.js" type="text/javascript"></script>
	<script src="~/lib/utils.js" type="text/javascript"></script>
}


<partial name="Organizer/_OrganizerVM" />
<partial name="Organizer/_OrganizerCardView" />
<partial name="Organizer/_OrganizerModals" />

<partial name="OrganizersHost/_OrganizersHostVM" />

<script type="text/javascript">
	RootVM.OrganizersHost = new OrganizersHostVM();
</script>

<div data-bind="template : { name: 'OrganizerCardViewTemplate', foreach: OrganizersHost.organizers }">
</div>
<div class="d-flex justify-content-center" data-bind="using: OrganizersHost">
	<button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#OrganizerModals_CreateOrganizer" onclick="RootVM.OrganizerModals.CreateOrganizer.SetParent(ko.dataFor(this));">Create new</button>
</div>